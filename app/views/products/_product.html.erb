<div id="<%= dom_id product %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= product.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= product.description %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Price:</strong>
    <%= product.price %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Stock:</strong>
    <%= product.stock %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Product Image:</strong>
    <% if product.images.attached? %>
      <% product.images.each do |image| %>
        <%= image_tag image, class: "w-24 h-24 object-cover rounded-lg shadow-md" %>
      <% end %>
    <% elsif product.image_urls.present? %>
    <% product.image_urls.each do |url| %>
      <%= image_tag url.strip, class: "w-32 h-32 object-cover rounded-lg shadow-md" %>
    <% end %>
      <p class="text-gray-500">ไม่มีรูปภาพ</p>
    <% end %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Category:</strong>
    <%= product.category.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Option:</strong>
    <%= product.option %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Status:</strong>
    <%= product.status %>
  </div>
</div>
